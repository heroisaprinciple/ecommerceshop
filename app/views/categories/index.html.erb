<div class="center-flex">
  <h1 class="font-bold text-4xl text-slate-100">Categories</h1>
</div>

<div class="p-3"></div>

<div class="center-grid">
  <% @categories.each do |category| %>
    <div class="element-card">
      <div class="bg-stone-600 rounded-tl-lg hover:rounded-tr-3xl">
        <div class="p-3 gif-category"></div>
      </div>
      <div class="px-5 pb-5">
        <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
         <%= link_to category.name, category_products_path(category_id: category.id) %>
        </h5>
      </div>
    </div>
  <% end %>
</div>

<div class="p-3"></div>


