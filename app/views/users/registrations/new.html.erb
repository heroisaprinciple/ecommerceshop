<div class="w-full max-w-xs mx-auto text-center">
  <h2 class="center-flex font-bold text-4xl text-slate-100 mb-2">Sign up</h2>
  <%= form_for(resource,
               as: resource_name,
               url: registration_path(resource_name),
               html: {
                 class: "bg-stone-900 mb-4 px-8 pt-6 pb-8"
               }
      ) do |f| %>

    <%= devise_error_messages! %>

    <div class="mb-4">
      <%= f.label :first_name, class: 'label-devise' %>
      <%= f.text_field :first_name,
                       placeholder: "Allison",
                       class: 'devise-input'
      %>
    </div>

    <div class="mb-4">
      <%= f.label :last_name, class: 'label-devise' %>
      <%= f.text_field :last_name,
                       placeholder: "Johnson",
                       class: 'devise-input'
      %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: 'label-devise' %>
      <%= f.email_field :email,
                        autocomplete: "email",
                        placeholder: "user@example.com",
                        class: 'devise-input'
      %>

    </div>

    <div class="mb-4">
      <%= f.label :password, class: 'label-devise' %>
      <% if @minimum_password_length %>
        <small><em class="text-gray-600">(should be <%= @minimum_password_length %> characters minimum and contain at least one uppercase letter, one digit and one special character)</em></small>

    <% end %>
      <%= f.password_field :password,
                           autocomplete: "new-password",
                           class: 'devise-input'
      %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: 'label-devise' %>
      <%= f.password_field :password_confirmation,
                           autocomplete: "new-password",
                           class: 'devise-input'
      %>
    </div>

    <div class="mb-4">
      <%= f.button "Sign Up",
                   class: 'button-navy',
                   data: { disable_with: "<i class='fa-solid fa-circle-notch fa-spin'></i> Signing in..."}
      %>
    </div>

    <%= render "devise/shared/links" %>

  <% end %>

  <%= render "devise/shared/form_footer" %>
</div>
