<div class="w-full max-w-xs mx-auto text-center">
  <h2 class="center-flex font-bold text-4xl text-slate-100 mb-2">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :post, class: "bg-stone-900 mb-4 px-8 pt-6 pb-8" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'label-devise' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: 'devise-input'
      %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset instructions",
                   class: 'button-navy'
      %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>