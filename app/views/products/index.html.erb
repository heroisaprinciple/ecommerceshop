<div class="bg-stone-900 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>


  <div class="flex flex-col justify-center text-center">
    <h1 class="font-bold text-4xl text-slate-100">Products</h1>
  </div>

  <div class="m-8"></div>

  <div id="products" class="min-w-full">
    <%= render partial: 'layouts/shared/product', locals: {products: @products} %>
  </div>

  <div id="products" class="min-w-full text-center text-white">
    <%= paginate @products %>
  </div>

</div>
