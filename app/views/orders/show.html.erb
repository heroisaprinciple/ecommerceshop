<div class="flex flex-col justify-center text-center">
  <h1 class="font-bold text-4xl text-slate-100">Your order #<%= @order.id %>,
    <%= current_user.firstname %> <%= current_user.lastname %></h1>
</div>

<div class="flex flex-col justify-center text-center">
  <h1 class="font-bold text-xl text-slate-100 text-white">
    In order to confirm your order, please, fill the form below.</h1>
</div>

<div class="grid grid-cols-1 gap-4 m-auto justify-center">
  <% @order.products.each do |ordered_item| %>
    <div class="max-w-sm bg-stone-900 rounded-lg dark:bg-stone-800 dark:bg-stone-800 ">
      <div class="bg-stone-600 rounded-tl-lg hover:rounded-tr-3xl">
        <div class="p-3 gif"></div>
      </div>
      <div class="px-5 pb-5">
        <a href="#">
          <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"> <%= ordered_item.name %></h5>
          <h7 class="text-l font-semibold tracking-tight text-gray-900 dark:text-white"> <%= ordered_item.description %></h7>
        </a>

        <div class="mt-3">
          <span class="text-3xl font-bold text-gray-900 dark:text-white"> <%= ordered_item.price %>$</span>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="p-3"></div>

<div class="text-center text-green-200 font-bold">
  <p>The total sum is: <%= @sum %>$</p>
</div>

<div class="p-3"></div>

<div class="flex flex-col justify-center text-center">
  <p class="text-white">If you are positive about your order, after filling the form, please click the button 'confirm'.</p>
  <!-- without partial:, local variable address is undefined -->
  <%= render partial: 'layouts/shared/forms/address_form', locals: {address: @address, order: @order} %>
</div>

