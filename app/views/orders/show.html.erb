<div class="center-flex">
  <h1 class="font-bold text-4xl text-slate-100">Your order is #<%= @order.id %>,
    <% if user_signed_in? %>
      <%= current_user.first_name %> <%= current_user.last_name %></h1>
    <% else %>
      <span>anonymous user</span>
    <% end %>
</div>

<div class="center-flex">
  <h1 class="font-bold text-xl text-slate-100 text-white">
    In order to confirm your order, please, fill the form below.</h1>
</div>

<div class="center-grid">
  <% @order.products.each do |ordered_item| %>
    <div class="element-card">
      <div class="bg-stone-600 rounded-tl-lg hover:rounded-tr-3xl">
        <div class="p-3 gif"></div>
      </div>
      <div class="px-5 pb-5">
        <a href="#">
          <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"> <%= ordered_item.name %></h5>
          <h5 class="text-l font-semibold tracking-tight text-gray-900 dark:text-white"> <%= ordered_item.description %></h5>
        </a>

        <div class="mt-3">
          <span class="text-3xl font-bold text-gray-900 dark:text-white"> <%= ordered_item.price %>€</span>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="p-3"></div>

<div class="text-center text-green-200 font-bold">
  <p>The total sum is: <%= @sum %>€</p>
</div>

<div class="p-3"></div>

<p class="text-white text-center">If you are positive about your order, after filling the form, please click the button 'confirm'.</p>
<div class="flex justify-center text-center text-green-400">
  <%= render partial: 'layouts/shared/forms/form', locals: { order: @order} %>
</div>

