<div class="grid grid-cols-2 gap-4">
  <% category.products.each do |product| %>
    <div class="element-card">
      <div class="bg-stone-600 rounded-tl-lg hover:rounded-tr-3xl">
        <div class="p-3 gif"></div>
      </div>
      <div class="px-5 pb-5">
        <a href="#">
          <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"> <%= product.name %></h5>
          <h7 class="text-l font-semibold tracking-tight text-gray-900 dark:text-white"> <%= product.description %></h7>
        </a>

        <div class="">
          <span class="text-3xl font-bold text-gray-900 dark:text-white"> <%= product.price %>â‚¬</span>
          <%= button_to 'Add to cart', add_product_to_cart_path(product),
                        class: "button-grey"
          %>
        </div>

        <div class="mt-3">
          <%= link_to "Show this product", category_product_path(slug: product.slug),
                      class: "button-underline" %>
        </div>
      </div>
    </div>
  <% end %>
</div>