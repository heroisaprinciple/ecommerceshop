<%= form_with model: address, scope: :address, url: order_path(order), method: :patch, data: { turbo: false } do |form| %>
    <div class="p-3"></div>
    <%= form.label :country, class: 'text-white' %> <br>
    <%= form.text_field :country %>

    <div class="p-2"></div>
    <%= form.label :city, class: 'text-white' %> <br>
    <%= form.text_field :city %>

    <div class="p-2"></div>
    <%= form.label :street, class: 'text-white' %> <br>
    <%= form.text_field :street %>

    <div class="p-2"></div>
    <p class='text-white'> Please, leave here any additional information for the address if you want. (house number, eircode, etc)</p>
    <%= form.label :comment, class: 'text-white' %> <br>
    <%= form.text_field :comment %>

    <div class="p-2"></div>
    <%= form.submit "Confirm",
                      class: 'text-white rounded-full focus:ring-4 focus:outline-none bg-slate-500 font-medium rounded-lg text-sm px-5 py-2.5 text-center' %>
<% end %>